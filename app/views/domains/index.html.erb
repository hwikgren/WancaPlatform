<h3>Domains crawled by SUKI</h3>

<div class="container">
  <div class="row">
    <div class="col-xs-10">
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Domain</th>
      <th>Number of sites</th>
      <th>Number of languages found</th>
      <th>Number of language groups</th>
    </tr>
  </thead>

  <tbody>
    <% @domains.each do |domain| %>
      <tr>
        <td style="padding-left:2em"><%= link_to domain.name, "https://en.wikipedia.org/wiki/.#{domain.name.downcase}" %></td>
        <td><%= domain_site_count(domain.id) %></td>
        <td><%= link_to languages_path(:dom => domain.id) do %>
              <%= domain_language_count(domain.id) %> <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <% end %>
        </td>
        <td><%= link_to groups_path(:dom => domain.id) do %>
              <%= domain_group_count(domain.id) %> <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="col-xs-2">
</div>
</div>
</div>
<br>


