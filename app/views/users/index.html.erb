<h1>Users</h1>

<div class="table-responsive">
  <table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Username</th>
      <th>Created</th>
      <th>Admin?</th>
      <th>Active</th>
      <th>Language</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user[0].username, user[0] %></td>
        <td><%= user[0].created_at %></td>
        <% if user[0].admin %>
            <td><%= 'Admin' %></td>
            <% else %>
        <td></td>
        <% end %>
        <% unless user[1].nil? %>
            <td><%= user[1] %></td>
        <% end %>
        <% unless user[2].nil? %>
            <td><%= user[2] %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>

<br>

<%= link_to 'New User', new_user_path %>
