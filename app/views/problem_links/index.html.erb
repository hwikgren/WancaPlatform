<h4>Links reported as problematic</h4>


<div class="table-responsive">
  <% if @problem_links.count > 0 %>
  <table class="table table-striped table-condensed">
    <thead>
    <tr>
      <th>
        Link
      </th>
      <th>
        Reporter
      </th>
    </tr>
    </thead>
    <tbody>
    <% @problem_links.each do |link| %>
        <tr>
          <td>
            <%= link_to link[0].address, link[0] %>
          </td>
          <td>
            <%= link_to 'Hide this link', problem_link_path(link[0].id, :show => 'false'), method: :patch, :class => 'btn btn-sm btn-default' %>
          </td>
          <td>
            <%= link[1] %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
      <% else %>
        <p>No problem links!</p>
      <% end %>
</div>

